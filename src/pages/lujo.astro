---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import Card from "@/components/Card.astro";
import { lujo } from "@/consts/pageTitles";

const tours = (await getCollection("tours")).filter(
  (tour) => tour.data.category.toLowerCase() === "lujo",
);

const description =
  "Viva el Perú en su máxima expresión con viajes de lujo: tren Hiram Bingham, hoteles 5 estrellas y experiencias personalizadas en Machu Picchu y Cusco.";
const canonical = "https://turismoperu.com.pe/lujo";
---

<Layout title={lujo} description={description} canonical={canonical}>
  <main class="max-w-7xl mx-auto px-4 py-10 mt-32">
    <h1
      class="text-balance text-center text-5xl md:text-6xl lg:gap-20 lg:text-6xl tracking-tight mb-10"
    >
      Experiencias de lujo en Perú
    </h1>

    <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
      {
        tours.map((tour) => (
          <Card
            title={tour.data.title}
            duration={tour.data.duration}
            category={tour.data.category}
            href={`/tours/${tour.slug}/`}
            image={tour.data.image}
            alt={tour.data.alt}
          />
        ))
      }
    </div>
  </main>
</Layout>
