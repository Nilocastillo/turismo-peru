---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import CodigoEsna from "@/components/CodigoEsna.astro";

import { getCollection } from "astro:content";
import CulturalBento from "@/components/CulturalBento.astro";

const tours = await getCollection("tours");
const culturalTours = tours.filter((t) => t.data.category === "cultural");
---

<Layout
  title="Agencia de Viajes en Perú - Experiencias Auténticas con Turismo Perú Consultores"
  description="Agencia de viajes en Perú especializada en experiencias auténticas. Viajes a Machu Picchu, Cusco, Lima, Amazonía y más. Turismo sostenible y personalizado."
  canonical="https://www.turismoperu.com.pe/"
  ogImage="https://www.turismoperu.com.pe/og-home.jpg"
>
  <Hero />
  <section class="max-w-7xl mx-auto px-6 py-24">
    <h2
      class="text-2xl text-balance md:text-3xl lg:text-4xl font-bold text-center text-secondary mb-6"
    >
      Tours Culturales
    </h2>
    <CulturalBento tours={culturalTours.slice(0, 5)} />
  </section>
  <CodigoEsna />
</Layout>
