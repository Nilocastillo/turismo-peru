---
import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/outfit";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = "Turismo Perú Consultores - Agencia de Viajes a Perú",
  description = "Turismo Perú Consultores. expertos en viajes personalizados, sostenibles y auténticos por Perú. Vive experiencias inolvidables en Machu Picchu, Cusco, Lima, la Amazonía y más.",
  ogImage = "https://www.turismoperu.com.pe/og.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Metadatos SEO básicos -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="agencia de viajes en Perú, viajes personalizados, turismo sostenible, tours en Machu Picchu, experiencias únicas, viajes a Cusco, viajes a Lima, paquetes turísticos Perú, turismo cultural, aventura en Perú, viaje a la Amazonía, agencia de turismo, Turismo Perú Consultores"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.turismoperu.com.pe" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.turismoperu.com.pe" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.turismoperu.com.pe" />

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
