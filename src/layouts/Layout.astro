---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import "@fontsource-variable/outfit";

import Header from "@/components/Header.astro";
import WhatsAppFooter from "@/components/WhatsAppFooter.astro";
import Footer from "@/components/Footer.astro";
import Schema from "@/components/Schema.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  robots?: string;
  ogImage?: string;
}

const siteName = "Turismo Perú Consultores";
const fixedTitle = `${siteName} - Agencia de Viajes a Perú`;

const {
  title = fixedTitle,
  description = "Turismo Perú Consultores. expertos en viajes personalizados, sostenibles y auténticos por Perú. Vive experiencias inolvidables en Machu Picchu, Cusco, Lima, la Amazonía y más.",
  canonical = Astro.url?.toString() || "https://www.turismoperu.com.pe",
  robots = "index, follow",
  ogImage = "https://www.turismoperu.com.pe/og.jpg",
} = Astro.props;

const pageTitle = title ? `${title}` : fixedTitle;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO básico -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={canonical} />
    <meta
      name="keywords"
      content="agencia de viajes en Perú, viajes personalizados, turismo sostenible, tours en Machu Picchu, experiencias únicas, viajes a Cusco, viajes a Lima, paquetes turísticos Perú, turismo cultural, aventura en Perú, viaje a la Amazonía, agencia de turismo, Turismo Perú Consultores"
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="manifest" href="/manifest.json" />
    <Schema
      data={{
        "@context": "https://schema.org",
        "@type": "TravelAgency",
        name: siteName,
        image: ogImage,
        description: description,
        url: canonical,
        telephone: "+51984209980",
        address: {
          "@type": "PostalAddress",
          streetAddress:
            "Calle Ollantaytambo D-11, Oficina 100 Edificio Atenas, Urbanización Manuel Prado",
          addressLocality: "Cusco",
          addressRegion: "Cusco",
          postalCode: "08000",
          addressCountry: "PE",
        },
      }}
    />
    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
    <WhatsAppFooter />
    <Footer />
    <script>
      let snowInterval: ReturnType<typeof setInterval> | null = null;

      function createSnowflake() {
        const snowflake = document.createElement("div");
        snowflake.classList.add("snowflake");
        snowflake.style.left = Math.random() * window.innerWidth + "px";
        snowflake.style.top = "-5px";
        snowflake.style.opacity = Math.random().toString();
        snowflake.style.transform = `scale(${Math.random() * 1.5 + 0.5})`;

        document.body.appendChild(snowflake);

        let posY = -5;
        let speed = Math.random() * 2 + 1;
        let wobble = 0;

        function fall() {
          if (!document.body.contains(snowflake)) return;

          posY += speed;
          wobble += 0.02;
          snowflake.style.top = posY + "px";
          snowflake.style.left =
            parseFloat(snowflake.style.left) + Math.sin(wobble) * 2 + "px";

          if (posY < window.innerHeight) {
            requestAnimationFrame(fall);
          } else {
            snowflake.remove();
          }
        }

        requestAnimationFrame(fall);
      }

      function startSnow() {
        if (!snowInterval) {
          snowInterval = setInterval(createSnowflake, 100);
        }
      }

      // Start on load
      startSnow();

      // Ensure it runs after view transitions if needed (though interval persists, this is safe)
      document.addEventListener("astro:page-load", startSnow);
    </script>

    <style is:global>
      .snowflake {
        position: fixed;
        top: 0;
        left: 0;
        width: 4px;
        height: 4px;
        background-color: white;
        z-index: 9999;
        pointer-events: none;
        border-radius: 50%;
      }
    </style>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
