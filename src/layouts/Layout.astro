---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import "@fontsource-variable/outfit";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  robots?: string;
  ogImage?: string;
}

const siteName = "Turismo Perú Consultores";
const fixedTitle = `${siteName} - Agencia de Viajes a Perú`;

const {
  title = fixedTitle,
  description = "Turismo Perú Consultores. expertos en viajes personalizados, sostenibles y auténticos por Perú. Vive experiencias inolvidables en Machu Picchu, Cusco, Lima, la Amazonía y más.",
  canonical = Astro.url?.toString() || "https://www.turismoperu.com.pe",
  robots = "index, follow",
  ogImage = "https://www.turismoperu.com.pe/og.jpg",
} = Astro.props;

const pageTitle = title ? `${title}` : fixedTitle;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO básico -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <link rel="canonical" href={canonical} />
    <meta
      name="keywords"
      content="agencia de viajes en Perú, viajes personalizados, turismo sostenible, tours en Machu Picchu, experiencias únicas, viajes a Cusco, viajes a Lima, paquetes turísticos Perú, turismo cultural, aventura en Perú, viaje a la Amazonía, agencia de turismo, Turismo Perú Consultores"
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
