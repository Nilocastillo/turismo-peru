---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  duration: string;
  category: string;
  href: string;
  image: ImageMetadata; // import(...) del frontmatter
  alt: string;
}

const { title, duration, category, href, image, alt } = Astro.props as Props;
---

<a
  href={href}
  class="relative block rounded-2xl overflow-hidden group w-full aspect-[1440/800] shadow-lg hover:shadow-xl transition-shadow duration-300"
>
  <!-- Imagen -->
  <Image
    src={image}
    alt={alt}
    layout="constrained"
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    loading="lazy"
    decoding="async"
  />

  <!-- Overlay ligero -->
  <div
    class="absolute inset-0 bg-black/20 group-hover:bg-black/30 transition-colors duration-300"
  >
  </div>

  <!-- CategorÃ­a en pastilla -->
  <span
    class="absolute uppercase top-4 left-4 bg-blue-600/90 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-md"
  >
    {category}
  </span>

  <!-- Contenido inferior -->
  <div class="absolute bottom-4 left-4 right-4 text-white">
    <h2 class="text-xl font-bold leading-tight line-clamp-2">{title}</h2>
    <p class="text-sm opacity-90 mt-1">{duration}</p>
  </div>
</a>
