---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  duration: string;
  category: string;
  href: string;
  image: ImageMetadata; // import(...) del frontmatter
  alt: string;
}

const { title, duration, category, href, image, alt } = Astro.props as Props;
---

<a
  href={href}
  class="relative block rounded-2xl overflow-hidden group w-full h-full"
>
  <div class="absolute inset-0 w-full h-full">
    <img
      src={image.src}
      alt={alt}
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
      decoding="async"
    />
  </div>

  <div class="absolute inset-0 bg-black/40 transition group-hover:bg-black/50">
  </div>

  <div class="relative z-10 flex flex-col justify-end h-full p-4 text-white">
    <h2 class="text-lg font-bold leading-tight">{title}</h2>
    <p class="text-sm">{duration}</p>
    <span
      class="mt-2 inline-block bg-blue-600/90 text-xs font-medium px-2 py-1 rounded"
    >
      {category}
    </span>
  </div>
</a>
