---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  duration: string;
  category: string;
  href: string;
  image: ImageMetadata;
  alt: string;
}

const { title, duration, category, href, image, alt } = Astro.props as Props;
---

<a
  href={href}
  class="card-travel group relative block w-full aspect-[1440/800] rounded-2xl overflow-hidden shadow-lg transition-all duration-500 hover:shadow-2xl hover:-translate-y-2"
>
  <!-- Imagen con zoom suave -->
  <Image
    src={image}
    alt={alt}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
    loading="lazy"
    decoding="async"
  />

  <!-- Overlay con gradiente elegante -->
  <div
    class="absolute inset-0 bg-gradient-to-t from-secondary via-secondary/50 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-500"
  >
  </div>

  <!-- Efecto de brillo en hover -->
  <div
    class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/0 to-transparent opacity-0 group-hover:opacity-20 transition-opacity duration-500"
  >
  </div>

  <!-- Badge de categoría con glassmorphism -->
  <div class="absolute top-4 left-4 z-10">
    <span
      class="inline-flex items-center gap-1.5 px-4 py-2 text-xs font-bold uppercase tracking-wider text-white backdrop-blur-md bg-primary/80 border border-white/20 rounded-full shadow-lg transition-transform duration-300 group-hover:scale-105"
    >
      <span class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></span>
      {category}
    </span>
  </div>

  <!-- Duración con icono -->
  <div class="absolute top-4 right-4 z-10">
    <div
      class="flex items-center gap-1.5 px-3 py-2 text-xs font-semibold text-white backdrop-blur-md bg-white/10 border border-white/20 rounded-full shadow-lg"
    >
      <svg
        class="w-3.5 h-3.5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>{duration}</span>
    </div>
  </div>

  <!-- Contenido inferior con diseño moderno -->
  <div
    class="absolute inset-x-0 bottom-0 p-6 z-10 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500"
  >
    <!-- Barra decorativa -->
    <div
      class="w-12 h-1 bg-primary rounded-full mb-3 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"
    >
    </div>

    <h2
      class="text-2xl font-bold text-white leading-tight mb-2 transform translate-y-1 group-hover:translate-y-0 transition-transform duration-500"
    >
      {title}
    </h2>

    <!-- Línea adicional que aparece en hover -->
    <div
      class="flex items-center gap-2 text-white/90 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-2 group-hover:translate-y-0"
    >
      <span class="text-sm font-medium">Explorar destino</span>
      <svg
        class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>

  <!-- Borde sutil que aparece en hover -->
  <div
    class="absolute inset-0 border-2 border-primary/0 group-hover:border-primary/50 rounded-2xl transition-colors duration-500 pointer-events-none"
  >
  </div>
</a>

<style>
  .card-travel {
    transform-style: preserve-3d;
  }

  @media (prefers-reduced-motion: reduce) {
    .card-travel * {
      animation: none;
      transition: none;
    }
  }
</style>
