---
interface Props {
  title: string;
  duration: string;
  category: string;
  href: string;
  image: string; // ahora es directamente la URL p√∫blica
  alt: string;
}

const { title, duration, category, href, image, alt } = Astro.props;
---

<a
  href={href}
  class="relative block rounded-2xl overflow-hidden shadow-lg group w-full h-full"
>
  <!-- Imagen de fondo -->
  <img
    src={image}
    alt={alt}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    loading="lazy"
  />

  <!-- Capa oscura para contraste -->
  <div class="absolute inset-0 bg-black/40 group-hover:bg-black/50 transition">
  </div>

  <!-- Contenido -->
  <div class="relative z-10 flex flex-col justify-end h-full p-4 text-white">
    <h2 class="text-lg font-bold">{title}</h2>
    <p class="text-sm">{duration}</p>
    <span
      class="mt-1 inline-block bg-blue-600 text-xs font-medium px-2 py-1 rounded"
    >
      {category}
    </span>
  </div>
</a>
