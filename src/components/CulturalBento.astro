---
import TourCard from "@/components/Card.astro";

interface Props {
  tours: any[];
}

const { tours } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-5 mt-12">
  {
    tours.map((tour, i) => (
      <div
        class:list={[
          i < 2
            ? "col-span-1 md:col-span-1 lg:col-span-3"
            : "col-span-1 md:col-span-1 lg:col-span-2",
        ]}
      >
        <TourCard
          title={tour.data.title}
          duration={tour.data.duration}
          category={tour.data.category}
          href={`/tours/${tour.slug}`}
          image={tour.data.image}
          alt={tour.data.alt}
        />
      </div>
    ))
  }
</div>
